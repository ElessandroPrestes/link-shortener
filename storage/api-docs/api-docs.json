{
    "openapi": "3.0.0",
    "info": {
        "title": "Household appliances",
        "description": "API for short links",
        "contact": {
            "email": "elessandrodev@gmail.com"
        },
        "license": {
            "name": "MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/v1/links": {
            "get": {
                "tags": [
                    "Links"
                ],
                "description": "Returns list of links",
                "operationId": "getAllLinks",
                "responses": {
                    "200": {
                        "description": "Links listed."
                    }
                }
            },
            "post": {
                "tags": [
                    "Links"
                ],
                "description": "Create Link",
                "operationId": "02b5821a70cfc37997c20489933f5055",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "original_url": {
                                        "type": "string",
                                        "example": "bit.ly/3LaMLtZ"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Link Register.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ShortLinkResource"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unprocessable Entity"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/links/{link}": {
            "get": {
                "tags": [
                    "Links"
                ],
                "description": "Retrieve a Short Link by TEXT.",
                "operationId": "getLinkByText",
                "parameters": [
                    {
                        "name": "ID",
                        "in": "path",
                        "description": "TEXT of the Short Link to be retrieved.",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Short Link listed.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ShortLinkResource"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Short Link Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Short Link Not Found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ShortLinkResource": {
                "title": "ShortLinkResource",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "uuid": {
                        "type": "string"
                    },
                    "original_link": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "deleted_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        }
    }
}